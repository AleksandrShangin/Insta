platform :ios, '13.0'

use_frameworks!

def ui_pods
    pod 'SnapKit'
end
    
def network_pods
    pod 'Appirater'
    pod 'SDWebImage'
end

def firebase_pods
    pod 'Firebase/Core'
    pod 'Firebase/Auth'
    pod 'Firebase/Database'
    pod 'Firebase/Storage'
    pod 'Firebase/Analytics' 
    pod 'Firebase/Crashlytics'
end    

target 'Insta' do
    ui_pods
    network_pods   
    firebase_pods
end
